<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Customizable Countdown</title>
  <style>
    /* Dark mode styling */
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      background-color: #1e1e1e; /* Dark background */
      color: #ffffff; /* Light text */
      margin: 0;
      padding: 20px;
    }
    h1, h2 {
      color: #66ffcc; /* Accent color */
    }
    #countdown {
      font-size: 2.2em;
      margin: 20px 0;
      color: #ffcc66; /* Countdown text color */
    }
    /* Customization Panel */
    .hidden {
      display: none;
    }
    #customization-panel {
      border: 2px solid #ffffff;
      padding: 20px;
      margin-top: 20px;
      background-color: #2b2b2b; /* Slightly lighter than background */
      border-radius: 10px;
    }
    input, button {
      margin-top: 10px;
      padding: 8px;
      font-size: 1em;
      border: 1px solid #66ffcc;
      border-radius: 5px;
      background-color: #1e1e1e;
      color: #ffffff;
      outline: none;
    }
    input:focus {
      border-color: #ffcc66;
    }
    button {
      cursor: pointer;
      transition: background-color 0.3s ease;
    }
    button:hover {
      background-color: #66ffcc;
      color: #000;
    }
    #password-prompt {
      margin-top: 30px;
      padding: 20px;
      background-color: #2b2b2b;
      border-radius: 10px;
      border: 2px dashed #66ffcc;
    }
    label {
      display: block;
      margin: 10px 0;
      color: #ffffff;
    }
    #password-error {
      color: #ff6666;
      font-size: 0.9em;
    }
  </style>
</head>
<body>
  <h1 id="title">Default Countdown</h1>
  <div id="countdown"></div>

  <!-- Password Prompt -->
  <div id="password-prompt">
    <p>Enter the password to access customization:</p>
    <input type="password" id="password-input" placeholder="Enter password">
    <button onclick="validatePassword()">Submit</button>
    <p id="password-error" class="hidden">Incorrect password! Please try again.</p>
  </div>

  <!-- Customization Panel -->
  <div id="customization-panel" class="hidden">
    <h2>Customize Countdown</h2>
    <label>
      Countdown Title:
      <input type="text" id="custom-title" placeholder="Enter title">
    </label>
    <label>
      Countdown End Time (YYYY-MM-DD HH:MM:SS):
      <input type="datetime-local" id="custom-endtime">
    </label>
    <button onclick="saveSettings()">Save Settings</button>
  </div>

  <script>
    const PASSWORD = "RXCustomKeyCountdown";

    // DOM elements
    const titleElement = document.getElementById("title");
    const countdownElement = document.getElementById("countdown");
    const passwordPrompt = document.getElementById("password-prompt");
    const customizationPanel = document.getElementById("customization-panel");
    const passwordError = document.getElementById("password-error");
    const customTitleInput = document.getElementById("custom-title");
    const customEndTimeInput = document.getElementById("custom-endtime");

    // Load saved settings
    const savedTitle = localStorage.getItem("countdownTitle") || "Default Countdown";
    const savedEndTime = localStorage.getItem("countdownEndTime");

    titleElement.textContent = savedTitle;
    let countdownEndTime = savedEndTime ? new Date(savedEndTime) : null;

    // Update countdown
    function updateCountdown() {
      const now = new Date();
      if (countdownEndTime && countdownEndTime > now) {
        const timeLeft = countdownEndTime - now;
        const days = Math.floor(timeLeft / (1000 * 60 * 60 * 24));
        const hours = Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

        countdownElement.textContent = `${days}d ${hours}h ${minutes}m ${seconds}s`;
      } else {
        countdownElement.textContent = "Countdown has ended!";
      }
    }

    // Password validation
    function validatePassword() {
      const inputPassword = document.getElementById("password-input").value;
      if (inputPassword === PASSWORD) {
        passwordPrompt.classList.add("hidden");
        customizationPanel.classList.remove("hidden");
        customTitleInput.value = titleElement.textContent;
        customEndTimeInput.value = countdownEndTime ? countdownEndTime.toISOString().slice(0, 16) : "";
      } else {
        passwordError.classList.remove("hidden");
      }
    }

    // Save customization
    function saveSettings() {
      const newTitle = customTitleInput.value;
      const newEndTime = new Date(customEndTimeInput.value);

      if (!newTitle || isNaN(newEndTime.getTime())) {
        alert("Please enter valid title and end time.");
        return;
      }

      localStorage.setItem("countdownTitle", newTitle);
      localStorage.setItem("countdownEndTime", newEndTime.toISOString());
      titleElement.textContent = newTitle;
      countdownEndTime = newEndTime;

      alert("Settings saved successfully!");
    }

    // Start the countdown
    setInterval(updateCountdown, 1000);
    updateCountdown();
  </script>
</body>
</html>
